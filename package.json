{
  "name": "force-screens",
  "description": "Mock number of screens",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:chrome",
    "dev:chrome": "vite --config vite.chrome.config.ts",
    "dev:firefox": "vite build --mode development --watch --config vite.firefox.config.ts",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "vite build --config vite.chrome.config.ts",
    "build:firefox": "vite build --config vite.firefox.config.ts",
    "preview": "vite preview",
    "lint": "oxlint . --fix",
    "format": "oxfmt ."
  },
  "dependencies": {
    "@crxjs/vite-plugin": "^2.2.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.27",
    "@types/node": "^24.6.0",
    "oxfmt": "^0.11.0",
    "oxlint": "^1.26.0",
    "typescript": "~5.9.3",
    "vite": "^7.1.7"
  }
}
